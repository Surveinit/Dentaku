<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:background="@color/background"
    android:orientation="vertical"
    >

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />



    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:text=""
        android:textSize="54sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:gravity="end|bottom"
        android:textColor="@color/accent"
        android:background="@color/background_lite"
        android:fontFamily="@font/retro"
        />


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtview1"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="1"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:text="2"
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:text="3"
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/bt_divide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:text="/"
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:layout_margin="4dp"
            android:text="4"
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:text="5"
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/bt6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:text="6"
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/bt_multiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:text="x"
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />


    </LinearLayout>




    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_weight="1">

        <Button
            android:id="@+id/bt7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:layout_margin="4dp"
            android:text="7"
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/bt8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:text="8"
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/bt9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:text="9"
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:text="+"
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout3"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_clr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:layout_margin="4dp"
            android:text="clr"
            android:textColor="#314004"
            android:backgroundTint="@color/accent_lime"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/bt0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:text="0"
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/btdot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:text="."
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />


        <Button
            android:id="@+id/btn_minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:fontFamily="@font/retro"
            android:text="-"
            android:backgroundTint="@color/background_lite"
            tools:ignore="Suspicious0dp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout4"
        android:layout_weight="1">

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:fontFamily="@font/retro"
        android:text="="
        android:backgroundTint="@color/background_lite"
        android:textStyle="bold"
        />

        ></LinearLayout>



</LinearLayout>